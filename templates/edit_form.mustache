<div id="fitem_id_name_shadow" class="form-group  fitem {{^multilanguageName}}hidden{{/multilanguageName}}">
    <div>
        <label class="col-form-label d-inline " for="id_name_shadow">
            Section name <small>(Plain text version)</small>
        </label>
    </div>
    <div class="form-inline felement" data-fieldtype="text">
        <input type="text" class="form-control " id="id_name_shadow" value="{{multilanguagenamePlaintext}}" size="30" placeholder="" maxlength="255" pattern=".*\S+.*" data-initial-value="" disabled="disabled">
    </div>
</div>

<div id="namemultilang_group_container" class="">
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="usemultilanguagename" {{#multilanguageName}}checked="checked"{{/multilanguageName}} aria-describedby="usemultilanguagenamehelp">
        <label class="form-check-label" for="usemultilanguagename">Use multi-language name</label>
        <small id="usemultilanguagenamehelp" class="text-muted d-block mb-2">{{#str}} usemultilanguagenamehelp, local_multilanguagenames {{/str}}</small>

        <div id="namemultilang_group" class="{{^multilanguageName}} hidden{{/multilanguageName}}">
            <div class="d-flex">
                <div class="w-100">
                    <div class="form-group fitem ">
                        <div class="form-inline felement form-group">
                            <label class="input-group-text justify-content-end" for="name1">Primary name</label>
                            <input type="text" class="form-control" id="name1" value="{{name1}}" size="25" maxlength="255" required="" pattern=".*\S+.*">
                            <select id="name1lang" class="form-control">
                                <option value="en"{{#name1langen}} selected{{/name1langen}}>English - EN</option>
                                <option value="mi"{{#name1langmi}} selected{{/name1langmi}}>Maori - MI</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group fitem ">
                        <div class="form-inline felement form-group">
                            <label class="input-group-text justify-content-end" for="name2">Secondary name</label>
                            <input type="text" class="form-control" id="name2" value="{{name2}}" size="25" maxlength="255" pattern=".*\S+.*">
                            <select id="name2lang" class="form-control">
                                <option value="en"{{#name2langen}} selected{{/name2langen}}>English - EN</option>
                                <option value="mi"{{#name2langmi}} selected{{/name2langmi}}>Maori - MI</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group fitem ">
                        <div class="form-inline felement form-group">
                            <label class="input-group-text justify-content-end" for="name3">Tertiary name</label>
                            <input type="text" class="form-control" id="name3" value="{{name3}}" size="25" maxlength="255" pattern=".*\S+.*">
                            <select id="name3lang" class="form-control">
                                <option value="en"{{#name3langen}} selected{{/name3langen}}>English - EN</option>
                                <option value="mi"{{#name3langmi}} selected{{/name3langmi}}>Maori - MI</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div id="namemultilang_preview_group">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Preview</h6>
                            <div id="namemultilang_preview">{{{preview}}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>